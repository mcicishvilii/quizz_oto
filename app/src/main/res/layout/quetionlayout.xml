<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/figmaback">


    <TextView
        android:id="@+id/TvpageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="1/6"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/TvQestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="what is kotlin?"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/TvpageNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <Button
        android:id="@+id/answer1"
        android:drawableEnd="@drawable/ic_arrow_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        android:layout_marginStart="40dp"
        android:text="answer1"
        android:backgroundTint="@color/kotlinColor"
        android:textAlignment="textStart"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/answer2"
        android:drawableEnd="@drawable/ic_arrow_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:text="answer2"
        android:backgroundTint="@color/kotlinColor"
        android:textAlignment="textStart"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@+id/answer1"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
       />

    <Button
        android:id="@+id/answer3"
        android:drawableEnd="@drawable/ic_arrow_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:text="answer3"
        android:backgroundTint="@color/kotlinColor"
        android:textAlignment="textStart"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@+id/answer2"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        />
    <Button
        android:id="@+id/answer4"
        android:drawableEnd="@drawable/ic_arrow_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:text="answer4"
        android:backgroundTint="@color/kotlinColor"
        android:textAlignment="textStart"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@+id/answer3"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>